<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.promise.meal.Home.MainActivity">


    <Button
        android:id="@+id/reg"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Sign Up!"
        android:textStyle="bold"
        android:onClick="reg_Click"
        android:background="@drawable/blackbutton"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorAccent"
        android:layout_alignStart="@+id/log" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Don't have an account?"
        android:layout_marginBottom="40dp"
        android:layout_alignBottom="@+id/reg"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/user"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="11"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_action_user"
        android:inputType="textPersonName"
        android:layout_above="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:layout_marginBottom="19dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="11"
        android:drawableLeft="@drawable/ic_action_pass"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_above="@+id/recover"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/log"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:onClick="Login_Click"
        android:background="@drawable/blackbutton"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/txt"
        android:layout_centerHorizontal="true" />
<!--
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="74dp"
        android:text="Already have an account?"
        android:layout_above="@+id/pass"
        android:textSize="14dp"
        android:layout_alignStart="@+id/user" />-->

    <TextView
        android:id="@+id/recover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgotten Password?"

        android:textStyle="italic"
        android:textSize="12dp"
        android:layout_above="@+id/log"
        android:layout_alignStart="@+id/log"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="11dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/rice1"

        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/recover" />


</RelativeLayout>
